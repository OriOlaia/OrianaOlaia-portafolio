---
import Card from "@/components/card/Card.astro";

---
<section class="projects" id="projects">
    <h1>Proyectos</h1>
    <div class="card-container">
      <Card />
    </div>
</section>

<style>  
  .projects{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
  }
  .projects h1{
      font-size: 3rem;
      margin-bottom: 2rem;
  }
  .card-container{
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
  }
  /* Responsividad para tablets */
  @media (max-width: 900px) {
    .card-container {
      gap: 1rem;
      max-width: 100%;
    }
  }

  /* Responsividad para m√≥viles */
  @media (max-width: 600px) {
    .projects h1 {
      font-size: 2rem;
    }
    .card-container {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
  }
</style>