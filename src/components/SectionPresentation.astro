---
import Image from "astro/components/Image.astro";
import { personalInfo } from "@/lib/data";

const subtitle = ["Software Developer", "Content Creator","Front-End Dev", "Service Technical", "Deaf and Hipocusic"]
---
<section class="presentacion">
    <Image
      src="/assets/ImagenOriOlaia.jpeg"
      alt="Foto Ori Olaia"
      width="350"
      height="350"
      style={{
        filter: "drop-shadow(4px 4px 2px rgba(0, 0, 0, 1))",
        borderRadius: "300px",
      }}
    />
    <div class="description">
      <h1>{personalInfo.name}</h1>
      <h2>{subtitle}</h2>
      <h3>Programadora desde {personalInfo.location}</h3>
      <p>
        Soy una apasionada de los videojuegos, streamer donde mayormente
        estoy jugando a juegos variados
      </p>
      <div>
        <li><a href={personalInfo.email}>Mi correo</a></li>
        <li><a href={personalInfo.github}>GitHub</a></li>
        <li><a href={personalInfo.linkedin}>Linkedin</a></li>
      </div>
    </div>
  </section>
  <style>
    .presentacion{
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #FFF;
    }
    .description{
    margin-left: 80px;
    width: 450px;
    color: #FFF;
}
  </style>